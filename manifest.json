{
	"manifest_version": 3,
	"name": "blockSites",
	"author": "Kezia Sharnoff 2025",
	"version": "1.1.0",
	"description": "Block groups of websites during work periods",
	"options_page": "settings.html",
	"action": {
		"default_popup": "popup.html",
		"default_icon": "icon.png"
	},
	"icons": {
		"16": "icon.png",
		"32": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"permissions": [
		"storage", 
		"tabs",
		"alarms" 
	]
}